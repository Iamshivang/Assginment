<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.assginment.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_lunchFragment"
            app:destination="@id/lunchFragment" />
    </fragment>
    <fragment
        android:id="@+id/lunchFragment"
        android:name="com.example.assginment.ui.lunch.LunchFragment"
        android:label="fragment_lunch"
        tools:layout="@layout/fragment_lunch" />
    <fragment
        android:id="@+id/myMealsFragment"
        android:name="com.example.assginment.ui.mymeals.MyMealsFragment"
        android:label="fragment_my_meals"
        tools:layout="@layout/fragment_my_meals" />
    <fragment
        android:id="@+id/nearbyFragment"
        android:name="com.example.assginment.ui.nearby.NearbyFragment"
        android:label="fragment_nearby"
        tools:layout="@layout/fragment_nearby" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.assginment.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>